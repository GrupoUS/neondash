# Neon Database (use pooled connection for serverless)
DATABASE_URL=postgresql://user:pass@ep-xxx.us-east-1.aws.neon.tech/neondash?sslmode=require

# Redis Cache (optional, falls back to in-memory)
REDIS_URL=redis://localhost:6379

# Admin Configuration (comma-separated emails for admin role assignment)
ADMIN_EMAILS=admin@example.com

# OpenClaw AI Assistant (Moltbot Gateway)
# The gateway must be running locally or accessible at this URL
OPENCLAW_GATEWAY_URL=ws://127.0.0.1:18789

# ============================================
# LLM Provider Configuration
# ============================================
# Option 1: Google Gemini (Recommended for N.E.O.N. Coach)
# Get your API key at: https://aistudio.google.com/app/apikey
# Uses model: gemini-3-flash-preview (latest, fastest)
GEMINI_API_KEY=your_gemini_api_key_here

# Option 2: Z.AI GLM 4.7 Flash (fallback if Gemini not configured)
# Get your API key at: https://open.bigmodel.cn/
# Uses model: glm-4.7-flash (efficient, powerful reasoning)
LLM_API_KEY=your_zai_api_key_here
LLM_MODEL=glm-4.7-flash

# Google Calendar Integration (OAuth2)
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxx
GOOGLE_REDIRECT_URI=http://localhost:3000/api/calendar/callback

# Instagram Business API Integration (OAuth2)
INSTAGRAM_APP_ID=your_facebook_app_id
INSTAGRAM_APP_SECRET=your_facebook_app_secret
INSTAGRAM_REDIRECT_URI=http://localhost:3000/api/instagram/callback

# Facebook Ads API (reuses META_APP_ID/SECRET - only custom redirect URI if needed)
# FACEBOOK_ADS_REDIRECT_URI=http://localhost:3000/api/facebook-ads/callback

# ============================================
# Meta WhatsApp Cloud API Integration
# ============================================
# Set up at: https://developers.facebook.com/apps/
# Requires WhatsApp Business API access
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
# Secure random string for webhook verification
META_WEBHOOK_VERIFY_TOKEN=your_secure_verify_token
# System User Access Token from Business Manager (never expires)
META_SYSTEM_USER_ACCESS_TOKEN=your_system_user_access_token
# Optional: Graph API version (default: v23.0)
META_GRAPH_API_VERSION=v23.0
# Frontend: Embedded Signup Configuration ID
VITE_META_APP_ID=your_meta_app_id
VITE_META_CONFIG_ID=your_embedded_signup_config_id

# ============================================
# Baileys (WhatsApp Web Self-Hosted) Integration
# ============================================
# Directory used to persist auth/session files
BAILEYS_SESSION_DIR=.baileys-sessions
# Enable verbose Baileys logging (recommended false in production)
BAILEYS_ENABLE_LOGGING=false

# App Configuration
NODE_ENV=development

# Analytics (Umami or similar) - Optional
# Uncomment and configure to enable analytics tracking
# VITE_ANALYTICS_ENDPOINT=https://analytics.example.com
# VITE_ANALYTICS_WEBSITE_ID=your-website-id
