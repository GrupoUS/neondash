# Evolution Core - Environment Configuration
# Copy this file to .env and fill in your actual values

# LLM API Configuration
LLM_API_ENDPOINT="https://api.perplexity.ai/chat/completions"
SONAR_API_KEY="your_api_key_here"

# Alternative LLM endpoints (uncomment to use)
# LLM_API_ENDPOINT="https://api.openai.com/v1/chat/completions"
# OPENAI_API_KEY="your_openai_key_here"

# LLM_API_ENDPOINT="https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent"
# GEMINI_API_KEY="your_gemini_key_here"

# Memory Worker Configuration
MEMORY_WORKER_PORT=37777
MEMORY_WORKER_HOST="127.0.0.1"

# Database Configuration
DB_PATH="/home/ubuntu/workspace/.evolution-core/data/sessions.db"
CHROMA_PATH="/home/ubuntu/workspace/.evolution-core/data/chroma"

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FILE="/tmp/evolution_core.log"
